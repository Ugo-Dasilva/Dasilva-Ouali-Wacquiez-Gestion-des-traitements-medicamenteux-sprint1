{% extends 'base.html.twig' %}

{% block title %}Traitements{% endblock %}

{% block body %}

<br><br><br>
    <div class="mx-auto p-4 bg-light w-75"> 
        <br><br>
        <table class="table">
        <tr>
            <th>Id</th>
            <th>Date de Début</th>
            <th>Date de Fin</th>
            <th>Séjour</th>
          {#<th>Séjour(s)</th>
            <th>Modifier</th>#}
        </tr>

        {% if traitement %}
            <tr>
                <td>{{traitement.getId}}</td>
                <td>{{traitement.getDatedebut|date('Y-m-d')}}</td> 
                <td>{{traitement.getDatefin|date('Y-m-d')}}</td>
                <td>{{traitement.getSejour.getId}}</td>
                {#<td>{{traitement.getIndication.getId}}</td>#}
            </tr>
        </table>
        {% else %}
            Pas de traitement trouvé.
        {% endif %} 
        <br><br> 
    </div>


    {% for indication in traitement.getIndication %}
        <td>{{indication.getId}}</td>
        {% for medicament in indication.getMedicament %}
            <td>{{medicament.getId}}</td>

        {% endfor %} 
    {% endfor %} 

    {#
    <ul>
    <br>
    {% if traitement %}
    <li>
        {{traitement.getId}} - {{traitement.getDatedebut|date('Y-m-d')}} - {{traitement.getDatefin|date('Y-m-d') }}
    </li>
    {% else %}
        Pas de traitement trouvé.
    {% endif %} 
    <br>
    </ul>#}
{% endblock %}